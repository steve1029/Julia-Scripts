\begin_layout Subsection
Faraday's law
\end_layout

\begin_layout Standard
The Faraday's law in frequency domain is,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\overrightarrow{\nabla}\times\overrightarrow{E}=-i\omega\mu\overrightarrow{H}-\sigma_{m}\overrightarrow{H}
\]

\end_inset


\end_layout

\begin_layout Standard
Rewriting into matrix form with stretched coordinates,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left[\begin{matrix}\frac{1}{s_{m,y}}\frac{\partial E_{z}}{\partial y}-\frac{1}{s_{m,z}}\frac{\partial E_{y}}{\partial z}\\
\frac{1}{s_{m,z}}\frac{\partial E_{x}}{\partial z}-\frac{1}{s_{m,x}}\frac{\partial E_{z}}{\partial x}\\
\frac{1}{s_{m,x}}\frac{\partial E_{y}}{\partial x}-\frac{1}{s_{m,y}}\frac{\partial E_{x}}{\partial y}
\end{matrix}\right]=-i\omega\mu_{0}\left[\begin{matrix}H_{x}\\
H_{y}\\
H_{z}
\end{matrix}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
s_{m,i}=\kappa_{m,i}+\frac{\sigma_{m,i}}{\alpha_{m,i}+i\omega\mu_{i}}
\]

\end_inset


\end_layout

\begin_layout Standard
However, by the condition 
\begin_inset Formula $\frac{\sigma_{i}}{\epsilon}=\frac{\sigma_{m}}{\mu}$
\end_inset

 required to make zero reflection, we have 
\begin_inset Formula $s_{i}=s_{m,i}$
\end_inset

 where 
\begin_inset Formula $i=x,y,z$
\end_inset

.
 So, the derivation process is almost same as previous one.
 
\end_layout

\begin_layout Standard
The Faraday's law in time domain becomes
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
-\mu_{0}\frac{\partial\mathscr{H}_{x}}{\partial t} & =\overline{s_{m,y}}\ast\frac{\partial\mathscr{E}_{z}}{\partial y}-\overline{s_{m,z}}\ast\frac{\partial\mathscr{E}_{y}}{\partial z}\\
-\mu_{0}\frac{\partial\mathscr{H}_{y}}{\partial t} & =\overline{s_{m,z}}\ast\frac{\partial\mathscr{E}_{x}}{\partial z}-\overline{s_{m,x}}\ast\frac{\partial\mathscr{E}_{z}}{\partial x}\\
-\mu_{0}\frac{\partial\mathscr{H}_{z}}{\partial t} & =\overline{s_{m,x}}\ast\frac{\partial\mathscr{E}_{y}}{\partial x}-\overline{s_{m,y}}\ast\frac{\partial\mathscr{E}_{x}}{\partial y}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
By the equation 
\begin_inset CommandInset ref
LatexCommand ref
reference "zeta from inv F.T."

\end_inset

 ,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\overline{s_{m,i}}=\mathscr{F}^{-1}\left(\frac{1}{s_{m,i}}\right)=\mathscr{F}^{-1}\left(\frac{1}{\kappa_{m,i}+\frac{\sigma_{m,i}}{i\omega\mu_{i}}}\right)=\frac{\delta(t)}{\kappa_{m,i}}-\frac{\sigma_{m,i}}{\mu_{i}\kappa_{m,i}^{2}}e^{-\left(\frac{\sigma_{m,i}}{\mu_{i}\kappa_{m,i}}+\frac{\alpha_{m,i}}{\mu_{i}}\right)t}u(t)\equiv\frac{\delta(t)}{\kappa_{m,i}}+\zeta_{m,i}(t)
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $i=x,y,z$
\end_inset

.
\end_layout

\begin_layout Standard
The inverse Fourier Transform yields,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
-\mu_{0}\frac{\partial\mathscr{H}_{x}}{\partial t} & =\frac{1}{\kappa_{m,y}}\frac{\partial\mathscr{E}_{z}}{\partial y}-\frac{1}{\kappa_{m,z}}\frac{\partial\mathscr{E}_{y}}{\partial z}+\zeta_{m,y}\ast\frac{\partial\mathscr{E}_{z}}{\partial y}-\zeta_{m,z}\ast\frac{\partial\mathscr{E}_{y}}{\partial z}\label{faraday's law, hx,stretched,convolution form}\\
 & =\frac{1}{\kappa_{m,y}}\frac{\partial\mathscr{E}_{z}}{\partial y}-\frac{1}{\kappa_{m,z}}\frac{\partial\mathscr{E}_{y}}{\partial z}+\psi_{hx,y}-\psi_{hx,z}\label{faraday's law, hx, stretched, psi form}\\
-\mu_{0}\frac{\partial\mathscr{H}_{y}}{\partial t} & =\frac{1}{\kappa_{m,z}}\frac{\partial\mathscr{E}_{x}}{\partial z}-\frac{1}{\kappa_{m,x}}\frac{\partial\mathscr{E}_{z}}{\partial x}+\zeta_{m,z}\ast\frac{\partial\mathscr{E}_{x}}{\partial z}-\zeta_{m,x}\ast\frac{\partial\mathscr{E}_{z}}{\partial x}\label{faraday's law,hy,stretched,convolution form}\\
 & =\frac{1}{\kappa_{m,z}}\frac{\partial\mathscr{E}_{x}}{\partial z}-\frac{1}{\kappa_{m,x}}\frac{\partial\mathscr{E}_{z}}{\partial x}+\psi_{hy,z}-\psi_{hy,x}\label{faraday's law hy, stretched, psi form}\\
-\mu_{0}\frac{\partial\mathscr{H}_{z}}{\partial t} & =\frac{1}{\kappa_{m,x}}\frac{\partial\mathscr{E}_{y}}{\partial x}-\frac{1}{\kappa_{m,y}}\frac{\partial\mathscr{E}_{x}}{\partial y}+\zeta_{m,x}\ast\frac{\partial\mathscr{E}_{y}}{\partial x}-\zeta_{m,y}\ast\frac{\partial\mathscr{E}_{x}}{\partial y}\label{faraday's law,hz,stretched,covolution form}\\
 & =\frac{1}{\kappa_{m,x}}\frac{\partial\mathscr{E}_{y}}{\partial x}-\frac{1}{\kappa_{m,y}}\frac{\partial\mathscr{E}_{x}}{\partial y}+\psi_{hz,x}-\psi_{hz,y}\label{faraday's law hz,stretched, psi form}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\psi_{field,component}$
\end_inset

 is,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\psi_{hx,y} & =\zeta_{m,y}\ast\frac{\partial\mathscr{E}_{z}}{\partial y},\hfill\psi_{hx,z}=\zeta_{m,z}\ast\frac{\partial\mathscr{E}_{y}}{\partial z}\\
\psi_{hy,z} & =\zeta_{m,z}\ast\frac{\partial\mathscr{E}_{x}}{\partial z},\hfill\psi_{hy,x}=\zeta_{m,x}\ast\frac{\partial\mathscr{E}_{z}}{\partial x}\\
\psi_{hz,x} & =\zeta_{m,x}\ast\frac{\partial\mathscr{E}_{y}}{\partial x},\hfill\psi_{hz,y}=\zeta_{m,y}\ast\frac{\partial\mathscr{E}_{x}}{\partial y}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
By the equation 
\begin_inset CommandInset ref
LatexCommand ref
reference "discretized convolution from zeta"

\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\zeta_{m,\nu}\ast\frac{\partial\mathscr{E}_{\rho}}{\partial\nu} & =\int_{-\infty}^{\infty}\zeta_{m,\nu}(\tau)\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)d\tau\nonumber \\
 & =\lim_{N\rightarrow\infty}\int_{0}^{N\Delta t}\left(-\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}^{2}}\right)e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)\tau}\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)d\tau\nonumber \\
 & =\lim_{N\rightarrow\infty}\left[\int_{0}^{\Delta t}\left(...\right)d\tau+\int_{\Delta t}^{2\Delta t}\left(...\right)d\tau+...+\int_{(N-1)\Delta t}^{N\Delta t}\left(...\right)d\tau\right]\nonumber \\
 & =\lim_{N\rightarrow\infty}\sum_{r=0}^{N-1}\int_{r\Delta t}^{(r+1)\Delta t}\left(-\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}^{2}}\right)e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)\tau}d\tau\cdot\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)\nonumber \\
 & =\lim_{N\rightarrow\infty}\sum_{r=0}^{N-1}\left(-\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}^{2}}\right)\int_{r\Delta t}^{(r+1)\Delta t}e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)\tau}d\tau\cdot\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)\nonumber \\
 & =\lim_{N\rightarrow\infty}\sum_{r=0}^{N-1}\left(\frac{\sigma_{m,\nu}}{\sigma_{m,\nu}\kappa_{m,\nu}+\alpha_{m,\nu}\kappa_{m,\nu}^{2}}\right)\left\{ e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)\Delta t}-1\right\} e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)r\Delta t}\cdot\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)\nonumber \\
 & =\lim_{N\rightarrow\infty}\sum_{r=0}^{N-1}a_{m,\nu}e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{\nu}}\right)r\Delta t}\cdot\frac{\partial\mathscr{E}_{\rho}}{\partial\nu}(t-\tau)\nonumber \\
 & =\sum_{r=0}^{N-1}Z_{0m\nu}(r)\frac{\partial\mathscr{E}_{\rho}(t-\tau)}{\partial\nu}d\tau\hfill(N\gg1)\label{convolution in discretized form}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Z_{om,\nu}(r)=a_{m,\nu}e^{-\left(\frac{\sigma_{m,\nu}}{\mu_{\nu}\kappa_{m,\nu}}+\frac{\alpha_{m,\nu}}{\mu_{m,\nu}}\right)r\Delta t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
a_{m,\rho}=\left(\frac{\sigma_{m,\rho}}{\sigma_{m,\rho}\kappa_{m,\rho}+\alpha_{m,\rho}\kappa_{m,\rho}^{2}}\right)\left\{ e^{-\left(\frac{\sigma_{m,\rho}}{\kappa_{m,\rho}}+\alpha_{m,\rho}\right)\frac{\Delta t}{\mu_{\rho}}}-1\right\} \label{coeff 'a' for Faraday's law in CPML}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Note that 
\begin_inset Formula $Z_{0y}$
\end_inset

 and 
\begin_inset Formula $a_{m,\rho}$
\end_inset

 are actually same as 
\begin_inset Formula $Z_{0y}$
\end_inset

 and 
\begin_inset Formula $a_{i}$
\end_inset

 in 
\begin_inset CommandInset ref
LatexCommand ref
reference "Z in CPML"

\end_inset

,
\begin_inset CommandInset ref
LatexCommand ref
reference "coeff 'a' for ampere's law in CPML"

\end_inset

, by matching condition in PML region.
\end_layout

