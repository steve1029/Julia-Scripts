\begin{align*}
-\mu_{0}\frac{\mathscr{H}_{x}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n+\frac{3}{2}}-\mathscr{H}_{x}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n+\frac{1}{2}}}{\Delta t}= & \frac{1}{\kappa_{m,y}}\cdot\frac{\mathscr{E}_{z}|_{i,j+1,k+\frac{1}{2}}^{n}-\mathscr{E}_{z}|_{i,j,k+\frac{1}{2}}^{n}}{\Delta y}-\frac{1}{\kappa_{m,z}}\cdot\frac{\mathscr{E}_{y}|_{i,j+\frac{1}{2},k+1}^{n}-\mathscr{E}_{y}|_{i,j+\frac{1}{2},k}^{n}}{\Delta z}\\
 & +\sum_{r=0}^{N-1}Z_{0m,y}(r)\frac{\mathscr{E}_{z}|_{i,j+1,k+\frac{1}{2}}^{n-r}-\mathscr{E}_{z}|_{i,j,k+\frac{1}{2}}^{n-r}}{\Delta y}\\
 & -\sum_{r=0}^{N-1}Z_{0m,z}(r)\frac{\mathscr{E}_{y}|_{i,j+\frac{1}{2},k+1}^{n-r}-\mathscr{E}_{y}|_{i,j+\frac{1}{2},k}^{n-r}}{\Delta z}\\
= & \frac{1}{\kappa_{m,y}}\cdot\frac{\mathscr{E}_{z}|_{i,j+1,k+\frac{1}{2}}^{n}-\mathscr{E}_{z}|_{i,j,k+\frac{1}{2}}^{n}}{\Delta y}-\frac{1}{\kappa_{m,z}}\cdot\frac{\mathscr{E}_{y}|_{i,j+\frac{1}{2},k+1}^{n}-\mathscr{E}_{y}|_{i,j+\frac{1}{2},k}^{n}}{\Delta z}\\
 & +\psi_{hx,y}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n}-\psi_{hx,z}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\psi_{hx,y}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n}= & \sum_{m=0}^{N-1}Z_{0m,y}(r)\frac{\mathscr{E}_{z}|_{i,j+1,k+\frac{1}{2}}^{n-r}-\mathscr{E}_{z}|_{i,j,k+\frac{1}{2}}^{n-r}}{\Delta y}\\
\psi_{hx,z}|_{i,j+\frac{1}{2},k+\frac{1}{2}}^{n}= & \sum_{m=0}^{N-1}Z_{0m,z}(r)\frac{\mathscr{E}_{y}|_{i,j+\frac{1}{2},k+1}^{n-r}-\mathscr{E}_{y}|_{i,j+\frac{1}{2},k}^{n-r}}{\Delta z}
\end{align*}

\end_inset


