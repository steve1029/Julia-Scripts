\begin_layout Standard
The Ampere's law and Faraday's law yields
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\epsilon_{0}\frac{\partial\mathscr{E}_{x}}{\partial t}+\sigma\mathscr{E}_{x} & =\frac{\partial\mathscr{H}_{z}}{\partial y}-\frac{\partial\mathscr{H}_{y}}{\partial z}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{y}}{\partial t}+\sigma\mathscr{E}_{y} & =\frac{\partial\mathscr{H}_{x}}{\partial z}-\frac{\partial\mathscr{H}_{z}}{\partial x}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{z}}{\partial t}+\sigma\mathscr{E}_{z} & =\frac{\partial\mathscr{H}_{y}}{\partial x}-\frac{\partial\mathscr{H}_{x}}{\partial y}\\
\mu_{0}\frac{\partial\mathscr{H}_{x}}{\partial t}+\sigma^{\ast}\mathscr{H}_{x} & =\frac{\partial\mathscr{E}_{y}}{\partial z}-\frac{\partial\mathscr{E}_{z}}{\partial y}\\
\mu_{0}\frac{\partial\mathscr{H}_{y}}{\partial t}+\sigma^{\ast}\mathscr{H}_{y} & =\frac{\partial\mathscr{E}_{z}}{\partial x}-\frac{\partial\mathscr{E}_{x}}{\partial z}\\
\mu_{0}\frac{\partial\mathscr{H}_{z}}{\partial t}+\sigma^{\ast}\mathscr{H}_{z} & =\frac{\partial\mathscr{E}_{x}}{\partial y}-\frac{\partial\mathscr{E}_{y}}{\partial x}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
By split field methods,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\epsilon_{0}\frac{\partial\mathscr{E}_{xy}}{\partial t}+\sigma_{y}\mathscr{E}_{xy} & =\frac{\partial\mathscr{H}_{z}}{\partial y}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{xz}}{\partial t}+\sigma_{z}\mathscr{E}_{xz} & =-\frac{\partial\mathscr{H}_{y}}{\partial z}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{yz}}{\partial t}+\sigma_{z}\mathscr{E}_{yz} & =\frac{\partial\mathscr{H}_{x}}{\partial z}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{yx}}{\partial t}+\sigma_{x}\mathscr{E}_{yx} & =-\frac{\partial\mathscr{H}_{z}}{\partial x}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{zx}}{\partial t}+\sigma_{x}\mathscr{E}_{zx} & =\frac{\partial\mathscr{H}_{y}}{\partial x}\\
\epsilon_{0}\frac{\partial\mathscr{E}_{zy}}{\partial t}+\sigma_{y}\mathscr{E}_{zy} & =-\frac{\partial\mathscr{H}_{x}}{\partial y}\\
\mu_{0}\frac{\partial\mathscr{H}_{xy}}{\partial t}+\sigma_{y}^{\ast}\mathscr{H}_{xy} & =-\frac{\partial\mathscr{E}_{z}}{\partial y}\\
\mu_{0}\frac{\partial\mathscr{H}_{xz}}{\partial t}+\sigma_{z}^{\ast}\mathscr{H}_{xz} & =\frac{\partial\mathscr{E}_{y}}{\partial z}\\
\mu_{0}\frac{\partial\mathscr{H}_{yx}}{\partial t}+\sigma_{x}^{\ast}\mathscr{H}_{yx} & =\frac{\partial\mathscr{E}_{z}}{\partial x}\\
\mu_{0}\frac{\partial\mathscr{H}_{yz}}{\partial t}+\sigma_{z}^{\ast}\mathscr{H}_{yz} & =-\frac{\partial\mathscr{E}_{x}}{\partial z}\\
\mu_{0}\frac{\partial\mathscr{H}_{zx}}{\partial t}+\sigma_{x}^{\ast}\mathscr{H}_{zx} & =-\frac{\partial\mathscr{E}_{y}}{\partial x}\\
\mu_{0}\frac{\partial\mathscr{H}_{zy}}{\partial t}+\sigma_{y}^{\ast}\mathscr{H}_{zy} & =\frac{\partial\mathscr{E}_{x}}{\partial y}
\end{align*}

\end_inset

 In frequency domain, the first two equation becomes
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\left(i\omega\epsilon_{0}+\sigma_{y}\right)\mathscr{E}_{xy} & =i\omega\epsilon_{0}s_{y}\mathscr{E}_{xy}=\frac{\partial\mathscr{H}_{z}}{\partial y}\quad\rightarrow\quad i\omega\epsilon_{0}\mathscr{E}_{xy}=\frac{1}{s_{y}}\frac{\partial\mathscr{H}_{z}}{\partial y}\\
\left(i\omega\epsilon_{0}+\sigma_{z}\right)\mathscr{E}_{xz} & =i\omega\epsilon_{0}s_{z}\mathscr{E}_{xz}=-\frac{\partial\mathscr{H}_{y}}{\partial z}\quad\rightarrow\quad i\omega\epsilon_{0}\mathscr{E}_{xz}=-\frac{1}{s_{z}}\frac{\partial\mathscr{H}_{y}}{\partial z}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Adding two equations yields,
\end_layout

\begin_layout Standard
