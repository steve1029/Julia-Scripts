\begin_inset Formula 
\begin{align}
ez[i][j][k]= & ez[i][j][k]\nonumber \\
 & +\frac{\Delta t}{\epsilon_{0}}\left(\begin{matrix}\frac{hy[i][j][k]-hy[i-1][j][k]}{\kappa_{x}[i]\Delta x}-\frac{hx[i][j][k]-hx[i][j-1][k]}{\kappa_{y}[j]\Delta y}\\
+psiezx[i][j][k]-psiezy[i][j][k]
\end{matrix}\right)
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
psiezx[i][j][k]=bx[i]\cdot psiezx[i][j][k]+a_{x}[i]\left(\frac{hy[i][j][k]-hy[i-1][j][k]}{\Delta x}\right)
\end{equation}

\end_inset


\end_layout

