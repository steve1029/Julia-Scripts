\[
\mathscr{B}_{z}|_{i+\frac{1}{2},j+\frac{1}{2}}^{n+\frac{3}{2}}=\left(\frac{2\epsilon_{0}\kappa_{x}-\sigma_{x}\Delta t}{2\epsilon_{0}\kappa_{x}+\sigma_{x}\Delta t}\right)\mathscr{B}_{z}|_{i+\frac{1}{2},j+\frac{1}{2}}^{n+\frac{1}{2}}+\left(\frac{2\epsilon_{0}\Delta t}{2\epsilon_{0}\kappa_{x}+\sigma_{x}\Delta t}\right)\left(\frac{\mathscr{E}_{x}|_{i+\frac{1}{2},j+1}^{n}-\mathscr{E}_{x}|_{i+\frac{1}{2},j}^{n}}{\Delta y}-\frac{\mathscr{E}_{y}|_{i+1,j+\frac{1}{2}}^{n}-\mathscr{E}_{y}|_{i,j+\frac{1}{2}}^{n}}{\Delta x}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
bz[i][j]=\frac{mx[i][j]}{px[i][j]}bz[i][j]+\frac{2\epsilon_{0}\Delta t}{px[i][j]}\left(\frac{ex[i][j+1]-ex[i][j]}{\Delta y}-\frac{ey[i+1][j]-ey[i][j]}{\Delta x}\right)
\]

\end_inset


\end_layout

